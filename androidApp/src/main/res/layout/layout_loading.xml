<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.mecofarid.trending.ui.trending.TrendingViewModel"/>
        <variable
            name="viewModel"
            type="com.mecofarid.trending.ui.trending.TrendingViewModel"/>
    </data>

    <com.facebook.shimmer.ShimmerFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/loading_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:isLoading="@{viewModel.uiState}">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/item_trending_loading_placeholder"/>
            <include layout="@layout/item_trending_loading_placeholder"/>
            <include layout="@layout/item_trending_loading_placeholder"/>
            <include layout="@layout/item_trending_loading_placeholder"/>
            <include layout="@layout/item_trending_loading_placeholder"/>
            <include layout="@layout/item_trending_loading_placeholder"/>
            <include layout="@layout/item_trending_loading_placeholder"/>
            <include layout="@layout/item_trending_loading_placeholder"/>
            <include layout="@layout/item_trending_loading_placeholder"/>
            <include layout="@layout/item_trending_loading_placeholder"/>
            <include layout="@layout/item_trending_loading_placeholder"/>
            <include layout="@layout/item_trending_loading_placeholder"/>
            <include layout="@layout/item_trending_loading_placeholder"/>
            <include layout="@layout/item_trending_loading_placeholder"/>
            <include layout="@layout/item_trending_loading_placeholder"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.facebook.shimmer.ShimmerFrameLayout>
</layout>