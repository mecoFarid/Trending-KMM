<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Trending.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="titleTextAppearance">@style/Widget.Luminostics.ToolbarText</item>
    </style>


    <style name="Widget.Luminostics.ToolbarText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Trending.TextAppearance.Title" parent="android:Widget.TextView">
        <item name="android:textColor">@color/error_title_color</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Trending.TextAppearance.Body" parent="android:Widget.TextView">
        <item name="android:textColor">@color/error_message_color</item>
        <item name="android:textSize">@dimen/text_10</item>
    </style>

    <style name="Widget.Trending.TextAppearance.TrendingItem.Primary" parent="android:Widget.TextView">
        <item name="android:textColor">@color/trending_item_primary_text_color</item>
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Trending.TextAppearance.TrendingItem.Secondary" parent="android:Widget.TextView">
        <item name="android:textColor">@color/trending_item_secondary_text_color</item>
        <item name="android:textSize">@dimen/text_10</item>
    </style>

    <style name="Widget.Trending.Button.RetryButton" parent="android:Widget.Button">
        <item name="android:paddingTop">@dimen/gu_1.5</item>
        <item name="android:paddingBottom">@dimen/gu_1.5</item>
        <item name="android:background">@drawable/retry_btn_bg</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/retry_btn_color</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

</resources>